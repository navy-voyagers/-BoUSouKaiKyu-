
	//タイトル画面
	TitleInit "script/title.dsp"
	TitleScriptPre
	repeat
	TitleScriptCalc
	if TitleBreak()=1 : break
	redraw 0
	TitleScriptDraw
	redraw 1
	await 16
	loop

	//メニュー画面
	MenuInit "script/menu.dsp"
	MenuScriptPre
	repeat
	MenuScriptCalc
	if MenuBreak()=1 : break
	redraw 0
	MenuScriptDraw
	redraw 1
	await 16
	loop

	end